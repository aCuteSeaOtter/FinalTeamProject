<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.LocalDAO">
 
<insert   id="insertFile" parameterType="com.example.domain.LocalVO">
INSERT INTO location
(
   local_id,
   local_name_eng, 
   local_content,
   local_image,
   local_name_kor
)
VALUES
(
 local_id_seq.NEXTVAL,
 #{local_name_eng},
 #{local_content},
 #{local_image},
 #{local_name_kor}
)
</insert>

